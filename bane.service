[Unit]
Description=B.A.N.E. Core - Behavioral Automation Network Engine
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=300
StartLimitBurst=10

[Service]
Type=simple
User=son
Group=son

WorkingDirectory=/home/user/BANE_CORE

Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/son/.Xauthority
Environment=XDG_RUNTIME_DIR=/run/user/1000
Environment=PYTHONUNBUFFERED=1
Environment=PYTHONPATH=/home/user/BANE_CORE

ExecStart=/home/user/BANE_CORE/.venv/bin/python3 /home/user/BANE_CORE/main.py

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
