[Unit]
Description=CLAWBOLT Messenger Gateway (Gunicorn)
After=network-online.target clawbolt.service
Wants=network-online.target
Requires=clawbolt.service

[Service]
Type=notify
User=son
WorkingDirectory=/home/son/CLAWBOLT
ExecStart=/home/son/CLAWBOLT/.venv/bin/gunicorn \
    --bind 0.0.0.0:8082 \
    --workers 2 \
    --threads 4 \
    --timeout 120 \
    --graceful-timeout 30 \
    --access-logfile /home/son/CLAWBOLT/Debug/Console/messenger_access.log \
    --error-logfile /home/son/CLAWBOLT/Debug/Console/messenger_error.log \
    --pid /tmp/clawbolt_messenger.pid \
    --capture-output \
    messenger_interface.app:app
ExecReload=/bin/kill -HUP $MAINPID

# Process management
Restart=always
RestartSec=5
StartLimitIntervalSec=60
StartLimitBurst=5

# Environment
Environment="PYTHONUNBUFFERED=1"
Environment="PYTHONPATH=/home/son/CLAWBOLT"

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ReadWritePaths=/home/son/CLAWBOLT/storage /home/son/CLAWBOLT/Debug /home/son/CLAWBOLT_Workspaces /tmp

# Resource limits
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
